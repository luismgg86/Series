#include "Series.h"

int main(){

	double n;

	std::cout<<"Ingrese un numero para calcular el fibonacci: "<<std::endl;
	std::cin>>n;

	//Objeto
	Series s(n);
        //Impresion
	std::cout<<"El fibonacci de "<<n<<" con el algoritmo iterativo es: "<<s.fibonacciIt()<<std::endl;
	std::cout<<"El fibonacci de "<<n<<" con el algoritmo recursivo es: "<<s.fibonacciRec(n)<<std::endl;

	std::cout<<"El factorial de "<<n<<" con el algoritmo iterativo es: "<<s.factorialIt()<<std::endl;
	std::cout<<"El factorial de "<<n<<" con el algoritmo recursivo es: "<<s.factorialRec(n)<<std::endl;

	return 0;
}
